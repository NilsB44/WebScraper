{
  "name": "WebScraper Dev Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff",
        "njpwerner.autodocstring"
      ]
    }
  },
  "features": {
    "ghcr.io/astral-sh/uv-devcontainer:0": {}
  },
  "postCreateCommand": "uv sync && uv run playwright install --with-deps",
  "remoteUser": "vscode"
}
